/**index.wxss**/

.issueinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}



.issueinfo-tip {
  color: #f7f7f7;
  font-size: 24rpx;
}

.index_hd {
  text-align: center;
  background-color: #07c62d;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #aaa;
  background-color: #fff;
  width: 250px;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.subtitle {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}

.search-page {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #07c62d;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
}

.search-left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background-color: #fff;
  font-size: 12px;
  width: 85%;
}

.search-right {
  color: #fff;
}
